<Window x:Class="TimeTracking.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="What Were You Doing?" Height="350" Width="400" Name="IdleWindow" Background="#d9edf7" Visibility="Hidden">
	<StackPanel>
		<ItemsControl Name="uxIdleEvents">
			<ItemsControl.ItemTemplate>
				<DataTemplate>
					<Button Tag="{Binding IdleEventID}" Content="{Binding Name}" Click="uxOldEventSubmit_Click"  Margin="0 0 0 10" Width="100"></Button>
				</DataTemplate>
			</ItemsControl.ItemTemplate>
		</ItemsControl>
		<Button Name="uxActiveWindowSubmit" Content="Looking at Active Window" Click="uxActiveWindowSubmit_Click" Margin="0 0 0 25" Width="150"></Button>
		<StackPanel Orientation="Horizontal">
			<TextBlock Width="100">Something Else?</TextBlock>
			<TextBox Name="uxNewEventName" Width="200"></TextBox>
			<Button Name="uxNewEventSubmit" Content="Save" Click="uxNewEventSubmit_Click" Margin="25 0 0 0" Width="50"></Button>
		</StackPanel>
	</StackPanel>
</Window>
